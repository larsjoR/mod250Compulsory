<?xml version="1.0" encoding="UTF-8"?>
<application xmlns="http://java.sun.com/xml/ns/javaee"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/application_6.xsd"
             version="6">
<application-name>AnthraxMarketplace</application-name>
    <module id="AnthraxWeb-Web">
        <web>
            <web-uri>AnthraxWeb.war</web-uri>
            <context-root>/</context-root>
        </web>
    </module>
    <module id="AnthraxEJB-EJB">
        <ejb>AnthraxEJB.jar</ejb>
    </module>
    <module id="AnthraxServices-Web">
        <web>
            <web-uri>AnthraxServices.war</web-uri>
            <context-root>/services</context-root>
        </web>
    </module>
</application>
